@model Orchard.ContentTypes.ViewModels.EditPartViewModel
<div class="summary">
    <div class="properties">
        <h3>@Model.DisplayName</h3>
        @if(!string.IsNullOrWhiteSpace(Model.Description)) {<span class="hint">@T(Model.Description)</span>}
    </div>
    <div class="related">
        <a href="@Url.Action("Edit", new { area = "Orchard.ContentTypes", id = Model.Name })" class="btn btn-info">
            <span class="fa fa-pencil-square-o"></span>
            @T("Edit")
        </a>
    </div>
</div>